                  svg.detail__information__highlight__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40")
                    path(fill="currentColor" opacity="0.4" d="M20,1c-4.38,0-8.63,1.52-12.03,4.29c-3.39,2.78-5.72,6.64-6.59,10.94c-0.87,4.3-0.23,8.76,1.81,12.64c2.04,3.88,5.37,6.93,9.4,8.64c4.64,1.96,9.88,2,14.55,0.1c4.67-1.9,8.4-5.57,10.36-10.21s2-9.88,0.1-14.55c-1.9-4.67-5.57-8.4-10.21-10.36C25.06,1.5,22.54,0.99,20,1z M20,0c3.96,0,7.82,1.17,11.11,3.37c3.29,2.2,5.85,5.32,7.37,8.98c1.51,3.65,1.91,7.68,1.14,11.56c-0.77,3.88-2.68,7.44-5.47,10.24c-2.8,2.8-6.36,4.7-10.24,5.47c-3.88,0.77-7.9,0.38-11.56-1.14c-3.65-1.51-6.78-4.08-8.98-7.37C1.17,27.82,0,23.96,0,20C0,14.7,2.11,9.61,5.86,5.86C9.61,2.11,14.7,0,20,0z")
